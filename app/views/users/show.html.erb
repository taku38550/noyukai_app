<div class="main">
  <div class="inner">
    <div class="user__wrapper">
      <h2 class="page-heading">
        <p><%= "#{@user.nickname}" %>さんの情報</p>
      </h2>
        <table class="table">
          <tbody>
            <tr>
              <th class="table__col1">ニックネーム</th>
              <td class="table__col2"><%= "#{@user.nickname}" %></td>
            </tr>
            <tr>
              <th class="table__col1">苗字</th>
              <td class="table__col2"><%= "#{@user.family_name}" %></td>
            </tr>
            <tr>
              <th class="table__col1">名前</th>
              <td class="table__col2"><%= "#{@user.first_name}" %></td>
            </tr>
            <tr>
              <th class="table__col1">栽培作物</th>
              <td class="table__col2"><%= "#{@user.cultivated_crops}" %></td>
            </tr>
          </tbody>
        </table>
      <h2 class="page-heading">
        <P><%= "#{@user.nickname}" %>さんの投稿記事</P>
      </h2>
      <div class="user__card">
        <%=# render partial: 'posts/post', collection: @posts %>
      </div>
    </div>
  </div>
</div>